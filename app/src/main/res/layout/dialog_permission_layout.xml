<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_border"
        android:orientation="vertical"
        android:padding="26dp">

        <TextView
            android:id="@+id/txt_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/txt_big"
            android:layout_marginTop="15dp"
            android:text="지도를 사용하기 위해 다음과 같은 권한이 필요합니다."
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/txt_big"
            android:layout_marginTop="15dp"
            android:text=": 위치 권한"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/txt_big"
            android:textColor="@color/sub_gray"
            android:layout_marginTop="15dp"
            android:text="* 만약 권한을 거절하시면, 해당 기능 사용이 제한될 수 있습니다"
            android:textSize="10sp"
            android:textStyle="bold" />
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/btnAction"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroung_border"
            android:text="동의하고 시작하기" />

    </LinearLayout>
</layout>
